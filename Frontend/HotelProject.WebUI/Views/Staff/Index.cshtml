@model List<StaffViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Personal Name</th>
		<th>Personal Title</th>
		<th>Delete</th>
		<th>Update</th>
		<th>Details</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.StaffId</th>
			<td>@item.Name</td>
			<td>@item.Title</td>
			<td><a href="/Staff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-outline-danger">Delete</a></td>
			<td><a href="/Staff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-outline-success">Update</a></td>
			<td><a href="/Staff/GetStaff/@item.StaffId" class="btn mb-1 btn-outline-info">Details</a></td>
		</tr>
	}
</table>
<a href="/Staff/AddStaff" class="btn mb-1 btn-outline-primary">Add Personal</a>